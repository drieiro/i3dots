#!/bin/sh

[ "$#" -ne "1" ] && echo "$0 [ montar | desmontar ]" && exit 1

dir="/tmp/gdrd"

[ ! -d "$dir" ] && mkdir -p "$dir"

case $1 in
    montar)
        if ping -c1 google.com >/dev/null 2>&1; then
            rclone mount --drive-export-formats ods,odt,odp gdrd: "$dir" &
        else
            echo "Sin conexiÃ³n a internet." && exit 1
        fi ;;
    desmontar) fusermount -u "$dir" >/dev/null 2>&1 ;;
    *) echo "$0 [ montar | desmontar ]" ;;
esac

